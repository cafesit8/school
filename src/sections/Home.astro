---
import DownIcon from "../icons/Icons"
---

<main
  id="inicio"
  class="flex flex-col items-center w-full m-auto min-h-screen relative px-3"
>
  <video
    class="w-full h-full object-cover absolute top-0 left-0 brightness-[0.4] -z-10"
    src="/public/home.mp4"
    autoplay
    loop
    muted></video>
  <div class="relative max-w-7xl m-auto text-white">
    <h1 class="md:text-4xl text-2xl font-bold text-eucalyptus-400">
      Bienvenidos a la
    </h1>
    <h1 class="md:text-6xl text-4xl font-bold text-white max-w-7xl text-pretty">
      Institución Educativa 3087 Carlos Cueto Fernandini
    </h1>
    <button class="bg-eucalyptus-500 rounded-sm px-4 py-2 mt-4">Ver más</button>
  </div>
  <DownIcon
    className="w-7 h-7 absolute bottom-5 left-0 right-0 m-auto text-white animate-fade-down animate-infinite"
  />
</main>
